{
  "mcpServers": {
    "youtube": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/youtube-transcript"]
    },
    "firebase": {
      "type": "stdio", 
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/firebase"]
    },
    "fetch": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/fetch"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    },
    "exa": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/exa"],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      }
    }
  }
}